}

.right-item .list-content {
    width: 100%;
}
.list-content > text {
    display: block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    background: url('https://note.youdao.com/yws/api/personal/file/D373E25E9646419CBB1A9314E2F779B6?method=download&shareKey=dd18f38fd09fae0ddd232458031f040f') no-repeat center;
}
.list-content .list-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.list-content .list-wrap .list {
    position: relative;
    width: 120rpx;
    height: 170rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/75522992F91340F8A2FCFA385A578B77?method=download&shareKey=130d7cb9805cac916b695d1bb5710609');
    background-size: 648rpx 1404rpx;
    background-position: 12rpx 0;
}
.list-content .list-wrap .list text {
    position: absolute;
    bottom: 0;
    text-align: center;
    background-color: #fff;
}