  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}
.trademark .more {
  position: absolute;
  right: 5rpx;
  padding-right: 40rpx;
  color: #999;
  font-size: 26rpx;
  font-weight: normal;
  background: url('https://note.youdao.com/yws/api/personal/file/41770EBFE62F486E9494E9A10F189413?method=download&shareKey=c1e046dc224676b8cca355f94cfcb0b6') no-repeat;
