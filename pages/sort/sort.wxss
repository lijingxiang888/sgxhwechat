.tab {
    display: flex;
}

.tab-left {
    width: 240rpx;
    height: 100vh;
    font-size: 28rpx;
    background-color: #f5f5f5;
}

.tab-left view {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.tab-left .active {
    position: relative;
    color: #3397f5;
    background-color: #fff;
}

.tab-left .active::before {
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -12rpx;
    width: 10rpx;
    height: 25rpx;
    content: "";
    background-color: #3397f5;
}

.tab-right {
    width: 100%;
    font-size: 26rpx;
}

.tab-right .right-item {
    padding-left: 15rpx;
    display: none;
}

.tab-right .right-item.active {
    display: block;
