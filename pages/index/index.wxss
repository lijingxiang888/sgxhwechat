  display: flex;
  justify-content: space-between;
}
.trademark .trademark-itemMax view {
  width: 32%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
 background: url('https://note.youdao.com/yws/api/personal/file/CBBD0806A32043589EAF2882A6EAD9A7?method=download&shareKey=a69f6cc5d73a8a8eae3f32261f899faa') no-repeat center;
