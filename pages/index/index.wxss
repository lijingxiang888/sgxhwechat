  font-size: 26rpx;
  background-color: #f0f0f0;
}
/**轮播图**/
swiper {
  height: 345rpx;
}
swiper image {
  display: block;
  width: 90%;
  height: 90%;
  margin: 20rpx auto;
  border-radius: 30rpx;
  box-shadow: 0 0 30rpx #999;
}
/**服务类别**/
.family {
  width: 100%;
  height: 180rpx;
  margin-top: 30rpx;
  box-shadow: 0 0 45rpx #ccc;
  background-color: #fff;
}
.family .family-item {
  float: left;
  width: 25%;
  height: 100%;
  padding-top: 20rpx;
  box-sizing: border-box
}
.family .family-item image {
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-bottom: 15rpx;
}
.family .family-item text {
  display: inline-block;
  width: 100%;
  text-align: center;
  color: #333;
}
/**热门推荐**/
.hot {
  width: 100%;
  height: 530rpx;
  padding: 20rpx;
  margin-top: 25rpx;
